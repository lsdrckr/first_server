#
# Makefile pour la bibliotheque r√©seau
#

SOURCES = $(wildcard *.c)
OBJETS = $(SOURCES:.c=.o)
CIBLE = libreseau.a

#
# Nom de la cible principale
#

all: $(CIBLE)

#
# Cible de nettoyage
#

clean:
	rm -f core *.o $(CIBLE)

#
# Dependances pour la bibliotheque
#

$(CIBLE): $(OBJETS)
	$(AR) rs $@ $? -lpthread

$(CIBLE:.a=).o: $(CIBLE:.a=).c $(CIBLE:.a=).h
